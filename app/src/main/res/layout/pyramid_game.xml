<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    tools:context=".MainActivity">

    <!-- Pyramid Buttons -->

    <!-- Numbers Buttons -->

    <GridLayout
        android:id="@+id/pyramidGrid"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp">

        <Button
            android:id="@+id/btn0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="80dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_marginTop="80dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="130dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginTop="130dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_marginTop="130dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="180dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_marginTop="180dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_marginTop="180dp" />

    </GridLayout>

    <GridLayout
        android:id="@+id/numberGrid"
        android:layout_width="414dp"
        android:layout_height="180dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pyramidGrid">

        <Button
            android:id="@+id/btn00"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/_0" />

        <Button
            android:id="@+id/btn01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="30dp"
            android:text="@string/_1" />

        <Button
            android:id="@+id/btn02"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="30dp"
            android:text="@string/_2" />

        <Button
            android:id="@+id/btn03"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginTop="30dp"
            android:text="@string/_3" />

        <Button
            android:id="@+id/btn04"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_marginTop="30dp"
            android:text="@string/_4" />

        <Button
            android:id="@+id/btn05"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:text="@string/_5" />

        <Button
            android:id="@+id/btn06"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="90dp"
            android:text="@string/_6" />

        <Button
            android:id="@+id/btn07"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="90dp"
            android:text="@string/_7" />

        <Button
            android:id="@+id/btn08"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginTop="90dp"
            android:text="@string/_8" />

        <Button
            android:id="@+id/btn09"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_marginTop="90dp"
            android:text="@string/_9" />

    </GridLayout>

    <GridLayout
        android:id="@+id/cleanGrid"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/numberGrid">

        <Button
            android:id="@+id/btnClean"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:text="@string/effacer" />

    </GridLayout>

    <GridLayout
        android:id="@+id/finishGrid"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:columnCount="1"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@+id/pyramidGrid"
        tools:layout_editor_absoluteX="-2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>